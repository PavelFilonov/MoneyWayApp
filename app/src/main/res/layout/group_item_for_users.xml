<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backFromGroupButton"
            android:layout_width="@dimen/min_size"
            android:layout_height="@dimen/min_size"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:contentDescription="@string/back"
            android:src="@drawable/ic_back_blue_foreground" />

        <TextView
            android:id="@+id/nameGroupItemText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/exitGroupButton"
            android:layout_width="@dimen/min_size"
            android:layout_height="@dimen/min_size"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:contentDescription="@string/delete"
            android:src="@drawable/ic_exit_red_foreground" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameOwnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:gravity="left"
            android:textColor="@color/blue"
            android:textSize="25sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/usersGroupListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>